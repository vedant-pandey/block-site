<svg width="48" height="48" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
  <!-- Gradient background -->
  <defs>
    <radialGradient id="bg" cx="0.3" cy="0.3" r="0.8">
      <stop offset="0%" stop-color="#ff6b7a"/>
      <stop offset="100%" stop-color="#ff4757"/>
    </radialGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="1" dy="1" stdDeviation="1" flood-color="#000" flood-opacity="0.3"/>
    </filter>
  </defs>
  
  <!-- Background circle -->
  <circle cx="24" cy="24" r="21" fill="url(#bg)" stroke="#fff" stroke-width="1.5" filter="url(#shadow)"/>
  
  <!-- Block symbol -->
  <circle cx="24" cy="24" r="15" fill="none" stroke="#fff" stroke-width="3"/>
  <line x1="12" y1="12" x2="36" y2="36" stroke="#fff" stroke-width="4" stroke-linecap="round"/>
  
  <!-- Inner circle for emphasis -->
  <circle cx="24" cy="24" r="10" fill="none" stroke="#fff" stroke-width="1.5" opacity="0.7"/>
  
  <!-- Timer accent (small dots) -->
  <circle cx="24" cy="9" r="1.5" fill="#fff" opacity="0.8"/>
  <circle cx="39" cy="24" r="1.5" fill="#fff" opacity="0.8"/>
  <circle cx="24" cy="39" r="1.5" fill="#fff" opacity="0.8"/>
  <circle cx="9" cy="24" r="1.5" fill="#fff" opacity="0.8"/>
</svg>
